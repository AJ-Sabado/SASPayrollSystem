<Application x:Class="SASPayrolSystemProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:userControls="clr-namespace:SASPayrolSystemProject"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:regularViewModels="clr-namespace:PresentationLayer.WPF.ViewModel.RegularViewModel">

    <!--  -->

    <Application.Resources>
    <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UIColors.xaml"/>
                <ResourceDictionary Source="/Styles/UIFonts.xaml"/>
                <ResourceDictionary Source="/Styles/UILibraries.xaml"/>
                <ResourceDictionary Source="/Styles/UIButtons.xaml"/>
                <ResourceDictionary Source="/Styles/UICards.xaml"/>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Amber" SecondaryColor="Blue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- This is where View Models are mapped to corresponding Views -->
            <DataTemplate DataType="{x:Type regularViewModels:LoginPage_ViewModel}">
                <userControls:MainWindow/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>