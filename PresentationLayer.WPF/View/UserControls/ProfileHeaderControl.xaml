<UserControl x:Class="PresentationLayer.WPF.View.UserControls.ProfileHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:userControls="clr-namespace:PresentationLayer.WPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="{Binding ProfileImage, RelativeSource={RelativeSource AncestorType=UserControl}}"
           Height="70" Width="70">
            <Image.Clip>
                <RectangleGeometry RadiusX="35" RadiusY="35" Rect="0,0,70,70" />
            </Image.Clip>
        </Image>

        <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0">
            <TextBlock Text="{Binding ProfileName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="22" FontFamily="{StaticResource PoppinsSemiBold}"/>
            <TextBlock Text="{Binding ProfilePosition, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="16" FontFamily="{StaticResource PoppinsLight}"/>
        </StackPanel>
    </Grid>

</UserControl>
