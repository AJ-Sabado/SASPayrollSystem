<UserControl x:Class="PresentationLayer.WPF.View.UserControls.SideMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.WPF.View.UserControls"
             mc:Ignorable="d"
             
             d:DesignHeight="720" d:DesignWidth="200"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border CornerRadius="0" Background="Black" Padding="0,30,0,0">
        <Viewbox Stretch="Uniform">
            <Grid Width="200" Height="688">
                <!-- Fixed base width for scaling reference -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>

                <Image Source="/Resources/Images/SAS_LOGO_BLACKBG.jpg"/>
                <Grid Grid.Row="1" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" VerticalAlignment="Stretch"
                            FontSize="12"
                        HorizontalAlignment="Stretch" Name="btnMenuDashboard"
                        Style="{StaticResource MenuButtons}" Margin="0,2" Click="btnMenuDashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" />
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" Margin="15,0,0,0" />
                        </StackPanel>
                    </Button>

                    <Button Grid.Row="1" VerticalAlignment="Stretch"
                            FontSize="12"
                        HorizontalAlignment="Stretch" Name="btnMenuJobDesk"
                        Style="{StaticResource MenuButtons}" Margin="0,2" Click="btnMenuJobDesk_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Work" Width="20" Height="20" />
                            <TextBlock Text="Job Desk" VerticalAlignment="Center" Margin="15,0,0,0" />
                        </StackPanel>
                    </Button>

                    <Button Grid.Row="2" VerticalAlignment="Stretch"
                            FontSize="12"
                        HorizontalAlignment="Stretch" Name="btnMenuAccount"
                        Style="{StaticResource MenuButtons}" Margin="0,2" Click="btnMenuAccount_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account" Width="20" Height="20" />
                            <TextBlock Text="Account" VerticalAlignment="Center" Margin="15,0,0,0" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Viewbox>
    </Border>

</UserControl>
