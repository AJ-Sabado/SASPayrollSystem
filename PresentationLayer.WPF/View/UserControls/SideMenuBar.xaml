<UserControl x:Class="PresentationLayer.WPF.View.UserControls.SideMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.WPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="250">
  
    <Border CornerRadius="15,0,0,15" Background="Black" Padding="0,30,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="60*"/>
            </Grid.RowDefinitions>

            <Image Source="/Resources/Images/SAS_LOGO_BLACKBG.jpg"/>
            <Grid Grid.Row="1" Margin="20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" Name="btnMenuDashboard"
                    Style="{StaticResource MenuButtons}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="Dashboard" Margin="10,2,0,0" FontSize="16"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
