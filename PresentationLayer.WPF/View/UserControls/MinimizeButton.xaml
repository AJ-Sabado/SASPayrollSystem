<UserControl x:Class="PresentationLayer.WPF.View.UserControls.MinimizeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:userControls="clr-namespace:PresentationLayer.WPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="50"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Button x:Name="MaximizeBtn" 
            Style="{StaticResource HeaderButtons}" 
            Content="{materialDesign:PackIcon Kind=Minimize, Size=17}" 
            Click="MaximizeBtn_Click"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
