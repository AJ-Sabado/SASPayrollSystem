<UserControl x:Class="SASPayrolSystemProject.View.UserControls.CustomTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:userControls="clr-namespace:SASPayrolSystemProject.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid Background="{StaticResource tbBGSCB}">
        <TextBlock Name="tblPlaceholderText" 
                Text="{Binding PlaceholderText, 
                RelativeSource={RelativeSource AncestorType=UserControl}}"
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                Padding="10,5,10,5"
                FontFamily="{DynamicResource PoppinsRegular}"
                FontStyle="Italic"
                FontSize="16"
                Foreground="SlateGray"
                Panel.ZIndex="0"/>
        <TextBox Name="tbTxtInput"
                 VerticalAlignment="Center" 
                 FontFamily="{DynamicResource PoppinsRegular}"
                 FontStyle="Italic"
                 FontSize="16"
                 Foreground="Black"
                 Padding="10,5,10,5"
                 BorderThickness="0"
                 Background="Transparent"
                 Panel.ZIndex="1"
                 TextChanged="txtInput_TextChanged"/>
    </Grid>
</UserControl>
