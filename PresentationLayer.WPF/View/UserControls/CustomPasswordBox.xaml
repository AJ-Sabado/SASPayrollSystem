<UserControl x:Class="SASPayrolSystemProject.View.UserControls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SASPayrolSystemProject.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">

    <Grid Background="{StaticResource tbBGSCB}">
        <TextBlock Name="tblPasswordPlaceholderText" 
                Text="{Binding PlaceholderText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                Padding="10,5,10,5"
                FontFamily="{DynamicResource PoppinsRegular}"
                FontStyle="Italic"
                FontSize="16"
                Foreground="Gray"
                Panel.ZIndex="0"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Name="tbVisiblePassword" 
                        Text="{Binding BoundedPass, UpdateSourceTrigger=PropertyChanged}"
                        VerticalAlignment="Center" 
                        Padding="10,5,10,5"
                        FontFamily="{DynamicResource PoppinsRegular}"
                        FontStyle="Italic"
                        FontSize="16"
                        Foreground="Gray"
                        Background="Transparent"
                        BorderThickness="0"
                        Panel.ZIndex="0"
                        TextChanged="tbVisiblePassword_TextChanged"
                        />

            <PasswordBox Grid.Column="0" Name="pbPasswordBox"
                         VerticalAlignment="Center" 
                         FontFamily="{DynamicResource PoppinsRegular}"
                         FontStyle="Italic"
                         FontSize="16"
                         Foreground="Black"
                         Padding="10,5,10,5"
                         BorderThickness="0"
                         Background="Transparent"
                         Panel.ZIndex="1"
                         PasswordChanged="pbPasswordBox_PasswordChanged"/>
            <Button Name="btnShowPass" Grid.Column = "1"
                            Height="35"
                            Width="40"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            Click="ShowButton_Click">
                <Image Name="btnShowPassIcon" Source="pack://application:,,,/Resources/Icons/eye_hidden.png" 
                            Width="20" Height="20"/>
            </Button>
        </Grid>
    </Grid>

</UserControl>
