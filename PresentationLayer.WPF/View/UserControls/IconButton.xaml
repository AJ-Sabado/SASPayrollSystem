<UserControl x:Class="PresentationLayer.WPF.View.UserControls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.WPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    
    <Button VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Name="btnMenu"
            Style="{StaticResource MenuButtons}"
            Click="btnMenu_Click"
            MouseEnter="btnMenu_MouseEnter">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image Source="{Binding ImageSource, ElementName=MenuButton}" Width="40" Height="40"
                   VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ButtonText, ElementName=MenuButton}" Margin="10,0,0,0" FontSize="16"
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
