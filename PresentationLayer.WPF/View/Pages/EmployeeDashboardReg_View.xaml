<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.WPF.View.Pages"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PresentationLayer.WPF.View.Pages.EmployeeDahboard_View"
        xmlns:customControl="clr-namespace:PresentationLayer.WPF.View.UserControls"
        mc:Ignorable="d"
        Height="720" Width="1280" Icon="/Resources/Images/SASLogo.png" 
        WindowStartupLocation="CenterScreen"
        Title="Strategic Assistant Staffing Employee Dashboard"
        WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="15" Background="White" BorderThickness="0">
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="85*" />
            </Grid.ColumnDefinitions>

            <customControl:SideMenuBar Grid.Column="0"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>

        </Grid>
    </Border>
</Window>
