<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.WPF.View.Windows"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PresentationLayer.WPF.View.Windows.AttendanceRequest_View"
        
        mc:Ignorable="d"
        Height="632" Width="559" Icon="/Resources/Images/SASLogo.png"
        WindowStartupLocation="CenterScreen"
        Title="Attendance Request" >
    <Grid HorizontalAlignment="Center" Width="540" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="Auto" MinHeight="127.6"/>
            <RowDefinition Height="Auto" MinHeight="23"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                    HorizontalAlignment="Left" Width="455" Height="100" VerticalAlignment="Top">
            <Image Source="/Resources/Icons/check.png"
               Width="90"
               Height="90"
                   Margin="15,1,0,0"/>
            <TextBlock Text=" Attendance"  FontSize="45" FontWeight="Bold" Height="60" Width="350"/>
        </StackPanel>
        <!--Employee-->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="5" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Employee Name" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="20" Margin="15,0,0,0"/>
                <TextBlock Text="Employee ID" Grid.Row="0" Grid.Column="1" FontWeight="Bold"   FontSize="20" Margin="95,0,0,0"/>
                <TextBlock Text="John Jane Joe S. Smith" Grid.Row="1" Grid.Column="0" Margin="15,5,0,0"   FontSize="20" Grid.ColumnSpan="2" />
                <TextBlock Text="546897" Grid.Row="1" Grid.Column="1" Margin="95,5,0,0"   FontSize="20" />
            </Grid>
        </Border>

        <!--Department-->

        <TextBlock Text=" Department" Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="15,5,0,10"  FontSize="20"/>
        <TextBlock Text=" Accounting and Management" Grid.Row="3" Grid.Column="0" Margin="15,36,0,0"  FontSize="20" Height="38" VerticalAlignment="Top" Grid.RowSpan="2"/>

        <Separator Grid.Row="4" Margin="0,30,0,0"/>
        <!--Attendance, Record-->


        <TextBlock Text=" Date" Grid.Row="5" FontWeight="Bold" Margin="15,1,401,104" FontSize="20"/>
        <TextBlock Text=" Time In" Grid.Row="5" FontWeight="Bold" Margin="178,1,208,104" FontSize="20"/>
        <TextBlock Text=" Time Out" Grid.Row="5" FontWeight="Bold" Margin="371,0,10,95" FontSize="20"/>
        <materialDesign:TimePicker HorizontalAlignment="Left" Margin="176,34,0,0" Grid.Row="5" 
                                   VerticalAlignment="Top" Width="158" Height="28"/>
        <materialDesign:TimePicker HorizontalAlignment="Left" Margin="371,36,0,0" Grid.Row="5" 
            VerticalAlignment="Top" Width="158" Height="28"/>
        <DatePicker HorizontalAlignment="Left" Margin="10,34,0,0" Grid.Row="5" VerticalAlignment="Top" Width="143" Height="28"/>

        <Separator Grid.Row="5" Margin="8,62,-7,40"/>


        <TextBlock Text="Total Hours " FontSize="20" Grid.Row="5" FontWeight="Bold"  Margin="20,81,381,18"/>
        <TextBlock Text="Reason" FontSize="20" Grid.Row="5" FontWeight="Bold" Margin="178,81,205,20"/>
        <TextBlock Text="0 hours" FontSize="20" Margin="20,113,401,86" Grid.Row="5" Grid.RowSpan="2"/>
        <ComboBox HorizontalAlignment="Left" Margin="178,113,0,0" Grid.Row="5" Width="158" Grid.RowSpan="2" VerticalAlignment="Top"/>

        <Separator Grid.Row="5" Margin="0,98,0,116" RenderTransformOrigin="0.507,0.169" Grid.RowSpan="2"/>

        <TextBlock Text="Proof" FontSize="20" FontWeight="Bold" Grid.Row="6" Margin="20,25,381,143"/>
        <TextBox HorizontalAlignment="Left" Margin="20,60,0,0" Grid.Row="6" TextWrapping="Wrap" Text="Attach File" VerticalAlignment="Top" Width="330" FontSize="20" SelectionOpacity="5" Grid.IsSharedSizeScope="True" BorderBrush="#FF8A8888" BorderThickness="1,1,1,1" CaretBrush="#FF92908C" SelectionBrush="#FF464644"/>
        <Button Content="Attach" HorizontalAlignment="Left" Margin="355,60,0,0" Grid.Row="6" VerticalAlignment="Top" BorderBrush="Black" Background="#FFFBF2F2" Height="35" Width="140" FontSize="20" />
        <Button Content="Request" HorizontalAlignment="Center" Margin="0,117,0,0" Grid.Row="6" VerticalAlignment="Top" Width="140" Height="50" FontSize="20" />



    </Grid>

</Window>
