<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.WPF.View.Pages"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PresentationLayer.WPF.View.Pages.EmployeeDahboard_View"
        xmlns:customControl="clr-namespace:PresentationLayer.WPF.View.UserControls"
        xmlns:dashPages="clr-namespace:PresentationLayer.WPF.View.Pages.Dashboard.EmployeeDashboardReg"
        
        mc:Ignorable="d"
        Height="720" Width="1280" Icon="/Resources/Images/SASLogo.png" 
        WindowStartupLocation="CenterScreen"
        Title="Strategic Assistant Staffing Employee Dashboard"
        MouseDown="Window_MouseDown"
        ResizeMode="CanResize"
        WindowState="Maximized">

    <Grid>
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="85*" />
            </Grid.ColumnDefinitions>

            <customControl:SideMenuBar Grid.Column="0"/>

            <Grid Grid.Column ="1" x:Name="_showArea">
                <dashPages:RegJobDesk/>
            </Grid>
        </Grid>
    </Grid>
</Window>
